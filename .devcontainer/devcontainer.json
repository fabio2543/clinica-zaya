{
  "name": "Zaya Streamlit",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "pip install --upgrade pip && pip install -r /app/requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "charliermarsh.ruff",
        "ms-vscode.makefile-tools",
        "ms-toolsai.datawrangler",
        "github.vscode-pull-request-github"
      ],
      "settings": {
        "python.defaultInterpreterPath": "python",
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "ruff.enable": true,
        "ruff.lint.args": [
          "--select",
          "E,F,I",
          "--ignore",
          "E501"
        ],
        "files.exclude": {
          "**/__pycache__": true,
          ".ruff_cache": true,
          ".pytest_cache": true,
          ".ipynb_checkpoints": true
        },
        "terminal.integrated.defaultProfile.windows": "Git Bash",
        "makefile.configureOnOpen": true
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/src,target=/app/src,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.streamlit,target=/app/.streamlit,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "STREAMLIT_SERVER_HEADLESS": "true"
  }
}